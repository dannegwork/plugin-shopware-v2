<li class="search-suggest-product js-result">
    {% block layout_search_suggest_result_link %}
        <a href="{{ bxblock.hit.products_seo_url[0] }}"
           title="{{ bxblock.hit.title }}"
           class="search-suggest-product-link">
            <div class="row align-items-center no-gutters">
                {% block layout_search_suggest_result_image %}
                    <div class="col-auto search-suggest-product-image-container">
                        <img src="{{ bxblock.hit.products_image[0] }}"
                             srcset="{{ bxblock.hit.products_image[0] }}"
                             class="search-suggest-product-image"
                             alt="{{ bxblock.hit.products_title }}"
                        />
                    </div>
                {% endblock %}

                {% block layout_search_suggest_result_name %}
                    <div class="col search-suggest-product-name">
                        {{ bxblock.hit.title }}
                    </div>
                {% endblock %}

                {% block layout_search_suggest_result_price %}
                    <div class="col-auto search-suggest-product-price">
                        <br><small class="search-suggest-product-reference-price">{{ bxblock.hit.discountedPrice|currency }} {{ "general.star"|trans|sw_sanitize }}</small>
                    </div>
                {% endblock %}
            </div>
        </a>
        {% for block in bxblock.blocks %}
            {% set narrativeContent = {'bxblock' : block } %}
            {% sw_include block.template with narrativeContent %}
        {% endfor %}
    {% endblock %}
</li>
