<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="boxalino.api.request.definition.search"
                 class="Boxalino\IntelligenceFramework\Service\Api\Request\Definition\ListingRequestDefinition"
                 parent="Boxalino\IntelligenceFramework\Service\Api\Request\RequestDefinitionInterface"/>

        <service id="boxalino.api.request.context.search" class="Boxalino\IntelligenceFramework\Service\Api\Request\Context\Listing"
                 parent="Boxalino\IntelligenceFramework\Service\Api\Request\ContextInterface">
            <call method="setRequestDefinition">
                <argument type="service" id="boxalino.api.request.definition.search"/>
            </call>
            <call method="setWidget"><argument>search</argument></call>
        </service>
    </services>

</container>
